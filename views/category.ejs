<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= category %> Menu</title>
</head>
<body>

  <%- include('./partials/nav') %>

  <h1><%= category %></h1>

  <% menuItems.forEach(item => { %>
    <h3>
      <%= item.name %>
      <% if (item.rating === 5) { %> ‚≠ê <% } %>
    </h3>

    <p>Price: $<%= item.price %></p>
    <p>Rating: <%= item.rating %></p>
    <p><%= item.details %></p>
    <hr>
  <% }) %>

</body>
</html>

